apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ${APP_REPO}-ingress
  annotations:
    app.kubernetes.io/name: ${APP_REPO}-ingress
    app.kubernetes.io/version: ${APP_COMMIT}
    app.kubernetes.io/managed-by: github
    app.kubernetes.io/component: ingress
    app.kubernetes.io/part-of: ${APP_REPO}-svc
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/actions.ssl-redirect: '{"Type": "redirect", "RedirectConfig":{ "Protocol": "HTTPS", "Port": "443", "StatusCode": "HTTP_301"}}'
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP": 80}, {"HTTPS":443}]'
    alb.ingress.kubernetes.io/certificate-arn: ${ARNCERTIFICATEK8S}
    alb.ingress.kubernetes.io/healthcheck-path: ${K8S_HEALTH_CHECK}
    alb.ingress.kubernetes.io/success-codes: '200,401'
    alb.ingress.kubernetes.io/inbound-cidrs: ${INBOUND_CIDRS}
    alb.ingress.kubernetes.io/tags: "backup-policy=5, creation-source=kubectl, domain-owner=d-${SQUAD}, resource=elbv2, domains=d-${SQUAD}, incident-priority=1, internal=false, environment=${APP_ENV}"
    alb.ingress.kubernetes.io/group.name: ${SQUAD}-${APP_ENV}
    external-dns.alpha.kubernetes.io/hostname: ${APP_REPO}.${K8S_DNS}.${AWS_REGION}.${SQUAD}.capitole.cloud
  labels:
    app: ${APP_REPO}-ingress
    app.kubernetes.io/name: ${APP_REPO}-ingress
spec:
  rules:
    - host: ${APP_REPO}.${K8S_DNS}.${AWS_REGION}.${SQUAD}.capitole.cloud
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: ssl-redirect
                port:
                  name: use-annotation
          - path: /v1/people/
            pathType: Prefix
            backend:
              service:
                name: ${APP_REPO}-svc
                port:
                  number: 80
          - path: /v1/starships/
            pathType: Prefix
            backend:
              service:
                name: ${APP_REPO}-svc
                port:
                  number: 80
          - path: /info/
            pathType: Prefix
            backend:
              service:
                name: ${APP_REPO}-svc
                port:
                  number: 80
          - path: /health/
            pathType: Prefix
            backend:
              service:
                name: ${APP_REPO}-svc
                port:
                  number: 80
          - path: /metrics/
            pathType: Prefix
            backend:
              service:
                name: ${APP_REPO}-svc
                port:
                  number: 80
